---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Energy, commodities, and industrials intelligence. Three free tools that replace expensive data subscriptions.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <title>{title} | Syncsolved</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/syncsolved-logo.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Syncsolved`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="Syncsolved" />
    <meta property="og:image" content="https://syncsolved.com/logo.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Syncsolved`} />
    <meta name="twitter:description" content={description} />
  </head>
  <body>
    <slot name="header" />
    <main>
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
