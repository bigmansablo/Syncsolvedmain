---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Talk to Us" description="Need the complete picture? Our advisory team provides proprietary analysis, country-specific strategy, and implementation support.">
  <Header slot="header" />

  <section class="contact-page">
    <div class="container">
      <div class="contact-layout">
        <div class="contact-info animate-fade-up">
          <div class="section__label">Get in touch</div>
          <h1>Let's talk about<br /><span class="text-gradient">your next market</span></h1>
          <p class="contact-desc">
            The tools give you the data. We tell you what it means for your specific deal. Tell us where you're headed.
          </p>

          <div class="contact-services">
            <h3>What we help with</h3>
            <div class="service-item">
              <h4>Market Entry Strategy</h4>
              <p>Who you're up against, how to get in, what could go wrong.</p>
            </div>
            <div class="service-item">
              <h4>Commodity Procurement</h4>
              <p>Where to buy, who else is selling, and what it should actually cost.</p>
            </div>
            <div class="service-item">
              <h4>Regulatory Compliance</h4>
              <p>What you need to comply with, what permits you need, and what to do first.</p>
            </div>
          </div>
        </div>

        <div class="contact-form-wrapper card animate-fade-up animate-delay-1">
          <form id="contact-form" class="tool-form">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" placeholder="Your name" required />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" placeholder="you@company.com" required />
            </div>
            <div class="form-group">
              <label for="company">Company</label>
              <input type="text" id="company" name="company" placeholder="Company name" />
            </div>
            <div class="form-group">
              <label for="interest">What are you working on?</label>
              <select id="interest" name="interest" required>
                <option value="">Select a focus area...</option>
                <option value="market-entry">Market entry / expansion</option>
                <option value="procurement">Commodity procurement</option>
                <option value="regulation">Regulatory compliance</option>
                <option value="strategy">General strategy</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="form-group">
              <label for="message">Tell us more</label>
              <textarea id="message" name="message" rows="4" placeholder="Which countries or commodities are you focused on? What decisions are you trying to make?" required></textarea>
            </div>
            <button type="submit" class="btn btn--primary btn--lg" style="width: 100%;">
              Send message
            </button>
          </form>

          <div id="form-success" class="form-success" style="display: none;">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
              <circle cx="24" cy="24" r="20" stroke="var(--color-success)" stroke-width="2"/>
              <path d="M16 24l5 5 11-11" stroke="var(--color-success)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <h3>Message sent</h3>
            <p>We'll be in touch within 24 hours.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-page {
    padding-top: calc(var(--header-height) + var(--space-20));
    padding-bottom: var(--space-20);
  }
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: start;
  }
  .contact-info h1 {
    margin-bottom: var(--space-6);
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.1;
  }
  .contact-desc {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-10);
    max-width: 480px;
  }
  .contact-services h3 {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-6);
  }
  .service-item {
    margin-bottom: var(--space-6);
    padding-left: var(--space-4);
    border-left: 2px solid var(--color-accent);
  }
  .service-item h4 {
    font-size: var(--text-base);
    margin-bottom: var(--space-1);
  }
  .service-item p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  .contact-form-wrapper textarea {
    resize: vertical;
    min-height: 100px;
  }
  .form-success {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    text-align: center;
    padding: var(--space-12);
  }
  .form-success h3 { color: var(--color-success); }

  @media (max-width: 768px) {
    .contact-layout { grid-template-columns: 1fr; gap: var(--space-8); }
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMsg = document.getElementById('form-success')!;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    btn.disabled = true;
    btn.textContent = 'Sending...';
    try {
      const data = Object.fromEntries(new FormData(form));
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });
      if (response.ok) {
        form.style.display = 'none';
        successMsg.style.display = 'flex';
      } else {
        btn.disabled = false;
        btn.textContent = 'Send message';
        alert('Something went wrong. Try again or email us directly.');
      }
    } catch {
      btn.disabled = false;
      btn.textContent = 'Send message';
      alert('Connection issue. Try again in a moment.');
    }
  });
</script>
